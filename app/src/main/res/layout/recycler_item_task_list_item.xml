<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:background="@drawable/bg_home_task_square"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="12dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_task_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="亚特兰蒂斯酒店保洁员"
                android:textColor="@color/defaultcolor"
                android:textSize="18sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tv_task_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="待录用"
                android:paddingTop="4dp"
                android:paddingBottom="3dp"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                android:background="@drawable/bg_task_status_employed_stay"
                android:textColor="@color/maincolor"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_task_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="三亚亚特兰蒂斯丨保洁员"
            android:textColor="@color/gray66"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_task_salary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="30元/小时"
            android:textColor="@color/maincolor"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_task_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:paddingLeft="7dp"
                android:paddingBottom="4dp"
                android:paddingRight="6dp"
                android:paddingTop="3dp"
                android:textColor="@color/gray66"
                android:background="@drawable/bg_student_health_card"
                android:text="男女不限"/>

            <TextView
                android:id="@+id/tv_task_studentcard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:paddingLeft="7dp"
                android:paddingBottom="4dp"
                android:paddingRight="6dp"
                android:layout_marginLeft="6dp"
                android:paddingTop="3dp"
                android:textColor="@color/gray66"
                android:background="@drawable/bg_student_health_card"
                android:text="学生证"/>

            <TextView
                android:id="@+id/tv_task_healthcard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:paddingLeft="7dp"
                android:paddingBottom="4dp"
                android:paddingRight="6dp"
                android:layout_marginLeft="6dp"
                android:paddingTop="3dp"
                android:textColor="@color/gray66"
                android:background="@drawable/bg_student_health_card"
                android:text="健康证"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@color/grayF5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_task_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="工作日期 2021.01.05-2021.02.28"
                android:textColor="@color/gray99"
                android:textSize="12sp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>